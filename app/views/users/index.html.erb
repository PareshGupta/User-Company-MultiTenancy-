<div class="container">
  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-12">
        <h2>Users</h2>
        <%= link_to 'Create User', new_user_path, class: 'btn btn-primary btn-sm pull-right' %>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="col-lg-9">
            <div class="bs-component">
              <table class="table table-striped table-hover ">
                <thead>
                  <tr class='success'>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Created At</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td><%= user.id %></td>
                      <td><%= user.name %></td>
                      <td><%= user.email %></td>
                      <td><%= user.created_at.strftime('%d/%m/%Y') %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
